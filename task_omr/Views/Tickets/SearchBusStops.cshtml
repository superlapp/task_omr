@model task_omr.Helpers.SearchOptions

@{
    ViewBag.Title = "Search for bus stops";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search bus stops</h2>

@using (Html.BeginForm("SearchBusStopResult", "Tickets", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div id="exampleDialog" class="modal hide fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-header">
            <a href="#" class="close" data-dismiss="modal">&times;</a>

            <h3>Dialog Title</h3>
        </div>
        <div class="modal-body">
            Dialog Text
        </div>
        <div class="modal-footer">
            <a href="#" class="btn btn-primary" data-dismiss="modal">Yes</a>
            <a href="#" class="btn" data-dismiss="modal">No</a>
        </div>
    </div>

    <div class="form-horizontal">
        <h4>SearchOptions</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        Bus stop name:
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.BusStopName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BusStopName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsDepStation)
                    @Html.ValidationMessageFor(model => model.IsDepStation, "", new { @class = "text-danger" })
                    Search in departures
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsArrStation)
                    @Html.ValidationMessageFor(model => model.IsArrStation, "", new { @class = "text-danger" })
                    Search in arrivals
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.UseDT)
                    @Html.ValidationMessageFor(model => model.UseDT, "", new { @class = "text-danger" })
                    Search by departure date
                </div>
            </div>
        </div>

        Date:
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.DT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Home", "Index")
</div>
