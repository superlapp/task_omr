@model task_omr.Ticket

@{
    ViewBag.Title = "Reserve ticket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reserve ticket</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Ticket</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        The name of the passenger:
        <div class="form-group">
            @*@Html.LabelFor(The name of the passenger: model => model.Passenger, htmlAttributes: new { @class = "control-label col-md-2" })*@                        
            <div class="col-md-10">
                @Html.EditorFor(model => model.Passenger, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Passenger, "", new { @class = "text-danger" })
            </div>
        </div>

        Passenger's passport:
        <div class="form-group">
            @*@Html.LabelFor(model => model.PassengerDocNum, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.PassengerDocNum, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PassengerDocNum, "", new { @class = "text-danger" })
            </div>
        </div>

        Number of seats:
        <div class="form-group">
            @*@Html.LabelFor(model => model.PassengerSeatNum, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.PassengerSeatNum, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PassengerSeatNum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Order" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to previous page", null, null, null, new { href = Request.UrlReferrer })
</div>